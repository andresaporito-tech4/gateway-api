{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "ReverseProxy": {
        "Routes": {

            "users-route": {
                "ClusterId": "users-cluster",
                "Match": {
                    "Path": "/users/{**catch-all}"
                }
            },

            "games-route": {
                "ClusterId": "games-cluster",
                "Match": {
                    "Path": "/games/{**catch-all}"
                }
            },

            "payments-route": {
                "ClusterId": "payments-cluster",
                "Match": {
                    "Path": "/payments/{**catch-all}"
                }
            }
        },

        "Clusters": {
            "users-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://users_api:8080/" }
                }
            },
            "games-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://games_api:8080/" }
                }
            },
            "payments-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://payments_api:8080/" }
                }
            }
        }
    }
}
